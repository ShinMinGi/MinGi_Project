	<select id="noticeFindAll" parameterType="com.choongang.concert.dto.board.PageNoticeDto" resultType="com.choongang.concert.entity.board.Notice">
        SELECT
        	*
        FROM
            notice_board
        WHERE
            delete_yn = 0
       ORDER BY
            id DESC
        LIMIT #{pagination.limitStart}, #{recordSize}
    </select>
    
    
    
   	<select id="noticeFindByNumCnt" parameterType="com.choongang.concert.dto.board.PageNoticeDto" resultType="int">
		SELECT
			COUNT(*)
		FROM
			notice_board
		WHERE
			delete_yn = 0
	</select>
	
